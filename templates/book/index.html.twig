{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
<div class="container">
    <h1 class="titulo-tabla">Sistema de Préstamo de Libros</h1>
    <div class="search-container">
        <form name="book-search" id="book-search" action="{{path('book_search')}}" >
            <label for="key">Buscar
            <input name="key" type="text" id="key" placeholder="en Nombre de libro o Autor">
            </label>
        </form>
    </div>
    <div class="menu">
        <ul>
            <li><a href="{{ path('book_new') }}">Nuevo Libro</a></li>
            <li><a href="{{ path('books_genre_def_index')}}">Ver Géneros</a></li>
        </ul>
    </div>
    <table class="table books">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre del Libro</th>
                <th>Nombre de Autor</th>
                <th>Cantidad</th>
                <th>acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.bookName }}</td>
                <td>{{ book.authorName }}</td>
                <td>{{ book.qty }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">ficha</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">modif</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no hay registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    

</div>
{% endblock %}
